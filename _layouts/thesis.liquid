---
layout: default
---

{% comment %} Show video (if provided) above the PDF. Video priority: video_html -> video_url -> video_local. Always render the PDF below. {% endcomment %}

{% assign has_video = false %}
{% if page.video_html or page.video_url or page.video_local %}
  {% assign has_video = true %}
{% endif %}

{%- assign thesis_title = page.thesis_title | default: page.title -%}
{% if thesis_title %}
  <h2 class="thesis-title" style="font-size:1.5rem; text-align:center; margin:0.5rem 0; font-weight:600;">{{ thesis_title }}</h2>
{% endif %}

{% if page.github_url %}
  <p style="text-align:center;margin:0.5rem 0;">
    <a href="{{ page.github_url | escape }}" target="_blank" rel="noopener noreferrer" style="display:inline-flex;align-items:center;gap:0.5rem;text-decoration:none;color:inherit;">
      <svg width="22" height="22" viewBox="0 0 16 16" aria-hidden="true" style="vertical-align:middle;">
        <path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.19 0 .21.15.46.55.38C13.71 14.53 16 11.54 16 8c0-4.42-3.58-8-8-8z"/>
      </svg>
      <span style="font-size:0.95rem;">View on GitHub</span>
    </a>
  </p>
{% endif %}


{% if has_video %}
  <div class="thesis-video" style="margin-bottom:1rem;">
    {% if page.video_html %}
      {{ page.video_html }}

    {% elsif page.video_url %}
      {% assign url = page.video_url %}
      {% if url contains 'youtube.com' or url contains 'youtu.be' %}
        {% capture yt_id %}
          {% if url contains 'v=' %}
            {{ url | split: 'v=' | last | split: '&' | first }}
          {% elsif url contains 'youtu.be/' %}
            {{ url | split: 'youtu.be/' | last | split: '?' | first }}
          {% endif %}
        {% endcapture %}
        <div class="video-embed" style="position:relative;padding-bottom:56.25%;height:0;overflow:hidden;">
          <iframe src="https://www.youtube.com/embed/{{ yt_id | strip }}" frameborder="0" allowfullscreen style="position:absolute;top:0;left:0;width:100%;height:100%;"></iframe>
        </div>

      {% elsif url contains 'vimeo.com' %}
        {% capture vm_id %}{{ url | split: '/' | last | split: '?' | first }}{% endcapture %}
        <div class="video-embed" style="position:relative;padding-bottom:56.25%;height:0;overflow:hidden;">
          <iframe src="https://player.vimeo.com/video/{{ vm_id | strip }}" frameborder="0" allowfullscreen style="position:absolute;top:0;left:0;width:100%;height:100%;"></iframe>
        </div>

      {% else %}
        <div class="video-embed" style="position:relative;padding-bottom:56.25%;height:0;overflow:hidden;">
          <iframe src="{{ url | escape }}" frameborder="0" allowfullscreen style="position:absolute;top:0;left:0;width:100%;height:100%;"></iframe>
        </div>
      {% endif %}

    {% elsif page.video_local %}
      <video controls width="100%" style="max-height:480px;display:block;">
        <source src="{{ page.video_local | relative_url }}">
        Your browser does not support the video tag.
      </video>
    {% endif %}
  </div>
{% endif %}

{%- comment -%} PDF always shown below the video (or alone if no video) {%- endcomment -%}
